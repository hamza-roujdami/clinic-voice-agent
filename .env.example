# =============================================================================
# Clinic Voice Agent - Environment Variables
# Copy to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Azure AI Foundry Project
# -----------------------------------------------------------------------------
PROJECT_ENDPOINT=https://your-resource.services.ai.azure.com/api/projects/your-project
FOUNDRY_MODEL_PRIMARY=gpt-4o-mini
FOUNDRY_EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# Azure AI Search
# -----------------------------------------------------------------------------
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_API_KEY=your-admin-key

# -----------------------------------------------------------------------------
# Azure Speech (for Voice Gateway)
# -----------------------------------------------------------------------------
# SPEECH_ENDPOINT=https://swedencentral.api.cognitive.microsoft.com/
# SPEECH_KEY=your-speech-key
# SPEECH_REGION=swedencentral

# -----------------------------------------------------------------------------
# Session Storage (optional - falls back to in-memory)
# -----------------------------------------------------------------------------
# COSMOS_ENDPOINT=https://your-cosmos.documents.azure.com:443/
# COSMOS_DATABASE=clinic-voice-agent
# COSMOS_CONTAINER=sessions

# -----------------------------------------------------------------------------
# Observability (optional)
# -----------------------------------------------------------------------------
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# -----------------------------------------------------------------------------
# Memory (Foundry Memory - preview)
# -----------------------------------------------------------------------------
ENABLE_MEMORY=true

# -----------------------------------------------------------------------------
# Bing Search Tools
# -----------------------------------------------------------------------------
# Standard Bing Grounding (searches entire web) - fallback option
# BING_GROUNDING_CONNECTION_NAME=your-bing-grounding-connection

# Bing Custom Search (searches configured domains only) - preferred for healthcare
# Set both to enable Custom Search, otherwise falls back to Bing Grounding
BING_CUSTOM_SEARCH_CONNECTION_NAME=clinic-agent-custom-bing
BING_CUSTOM_SEARCH_INSTANCE_NAME=your-custom-search-instance-name
